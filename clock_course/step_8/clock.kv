<MyButton@Button>:
    font_name: 'Roboto'
    font_size: 25
    bold: True
    
<MyLabel@Label>:
    font_name: 'Roboto'
    font_size:60
    markup: True
    
ClockLayout:
    orientation: 'vertical'
    time_prop: time
    sw_prop: stopwatch
    
    MyLabel:
        id: time
        text: '[b]00[/b]:00:00'
        
    BoxLayout:
        height: 90
        orientation:'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1,None)
        
        MyButton:
            background_normal: 'button_normal.png'
            background_down: 'button_down.png'
            id: start_stop
            text: 'Start'
            on_press: app.start_stop()
            
        MyButton:
            background_normal: 'red_button_normal.png'
            background_down: 'red_button_down.png'
            id: reset
            text: 'Reset'
            on_press: app.reset()
            
    MyLabel:
        id: stopwatch
        text: '00:00.[size=40]00[/size]'
