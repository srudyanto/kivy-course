ClockLayout:
    orientation: 'vertical'
    time_prop: time
    
    Label:
        id: time
        text: '[b]00[/b]:00:00'
        font_size: 60
        markup: True
        
    BoxLayout:
        height: 90
        orientation:'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1,None)
        
        Button:
            text: 'Start'
            font_size: 25
            bold: True
            
        Button:
            text: 'Reset'
            font_size: 25
            bold: True
            
    Label:
        id: stopwatch
        text: '00:00.[size=40]00[/size]'
        markup: True
        font_size: 60