<MyButton@Button>:
    font_size: 25
    bold: True
    
<MyLabel@Label>:
    font_size:60
    markup: True
    
ClockLayout:
    orientation: 'vertical'
    time_prop: time
    sw_prop: stopwatch
    
    MyLabel:
        id: time
        text: '[b]00[/b]:00:00'
        
    BoxLayout:
        height: 90
        orientation:'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1,None)
        
        MyButton:
            text: 'Start'
            
        MyButton:
            text: 'Reset'
            
    MyLabel:
        id: stopwatch
        text: '00:00.[size=40]00[/size]'
