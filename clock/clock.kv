<Label>:
    font_name: 'Roboto'
    font_size: 60
    markup: True

<RobotoButton@Button>:
    background_normal: 'button_normal.png'
    background_down: 'atlas://myatlas/button_down'
    font_name: 'Roboto'
    font_size: 25
    bold: True

BoxLayout:
    orientation: 'vertical'

    time_prop: time

    Label:
        id: time

    BoxLayout:
        height: 90
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1, None)

        RobotoButton:
            id: start_stop
            text: 'Start'
            on_press: app.start_stop()

        RobotoButton:
            id: reset
            text: 'Reset'
            background_normal: 'red_button_normal.png'
            background_down: 'atlas://myatlas/red_button_down'
            on_press: app.reset()

    Label:
        id: stopwatch
        text: '00:00.[size=40]00[/size]'
